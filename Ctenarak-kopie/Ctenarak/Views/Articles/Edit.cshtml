@model Ctenarak.Models.Article

@{
    ViewData["Title"] = "Edit";
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Obsah" class="control-label"></label>
                <input asp-for="Obsah" class="form-control" />
                <span asp-validation-for="Obsah" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Titulek" class="control-label"></label>
                <input asp-for="Titulek" class="form-control" />
                <span asp-validation-for="Titulek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Popis" class="control-label"></label>
                <input asp-for="Popis" class="form-control" />
                <span asp-validation-for="Popis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Uložit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Zpět</a>
</div>

